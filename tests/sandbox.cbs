define gravity=10
define air_drop=5
define delta_time=0.1
define mass=0.5
define size=0.01
define speed_x=15
define speed_y=0
define posit_x=0
define posit_y=0
function run()
	define ax=0
	define ay=0
	if(speed_x>0)
		ax=ax-(air_drop*size*speed_x)/mass
	end
	if(speed_y>0)
		ay=(mass*gravity-air_drop*size*speed_y)/mass
	end
	if(speed_y==0)
		ay=(mass*gravity)/mass
	end
	if(speed_y<0)
		ay=(mass*gravity+abs(air_drop*size*speed_y))/mass
	end
	posit_x=posit_x+speed_x*delta_time+0.5*ax*delta_time^2
	posit_y=posit_y+speed_y*delta_time+0.5*ay*delta_time^2
	speed_x=speed_x+ax*delta_time
	speed_y=speed_y+ay*delta_time
end

function main()
	init_graphics()
	while(true)
		fit_drawable()
		clear_drawable()
		draw_string(0,0,"Simple Sandbox",darwin_pixel(" ", true,false, get_color("black"), get_color("white")))
		if(posit_x<0)
			speed_x=abs(speed_x)
		end
		if(posit_y<0)
			speed_y=abs(speed_y)
		end
		if(posit_x>get_width_drawable()-1)
			speed_x=-abs(speed_x)
		end
		if(posit_y>get_height_drawable()-1)
			speed_y=-abs(speed_y)
		end
		run()
		draw_point(posit_x,posit_y,darwin_pixel("@", true,false, get_color("white"), get_color("black")))
		update_drawable()
	end
end
main()
