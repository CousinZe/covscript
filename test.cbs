darwin_loadmodule("./darwin.module")
darwin_setpencil("@",True,False,4,1)
Define bx=0
Define by=0
Define bxi=True
Define byi=True
While True Do
    darwin_fitwindow()
    darwin_clearpaint()
    darwin_drawpoint(bx,by)
    If bx<=0 Then
        bxi=True
    End

    If by<=0 Then
        byi=True
    End

    If bx>=darwin_windowwidth()-1 Then
        bxi=False
    End

    If by>=darwin_windowheight()-1 Then
        byi=False
    End

    If bxi Then
        bx=bx+1
    Else
        bx=bx-1
    End

    If byi Then
        by=by+1
    Else
        by=by-1
    End

    darwin_updatepaint()
End